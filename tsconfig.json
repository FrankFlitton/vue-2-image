{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "compilerOptions": {
    "target": "es6",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*", "./vite.config.ts"]
    },
    "typeRoots": [
      "src/types",
      "node_modules/@types"
    ]
  },

  "references": [
    {
      "path": "./tsconfig.config.json"
    }
  ]
}
